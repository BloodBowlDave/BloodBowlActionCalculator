<MudItem>
    <MudPaper>
        <h5><u>D</u>odge</h5>

        <MudNumericField T="int" Min="1" Max="8" @bind-Value="_roll" Disabled="Disabled"/>
        <MudButton Variant="Variant.Outlined" OnClick="AddAction" Disabled="Disabled">Add</MudButton>
    </MudPaper>
</MudItem>

@code {
    private int _roll = 3;

    [Parameter]
    public EventCallback<Action> OnAddAction { get; set; }
        
    [Parameter]
    public bool Disabled { get; set; }

    private void AddAction()
    {
        OnAddAction.InvokeAsync(new Models.Actions.Dodge(_roll, false, false, true));
    }
}
