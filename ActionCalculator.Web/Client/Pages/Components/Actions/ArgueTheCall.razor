<MudItem>
	<MudPaper>
        <h5><u>A</u>rgue The Call</h5>
        
		@for (var i = 5; i <= 6; i++)
		{
			var roll = i;
		    <MudButton Variant="Variant.Outlined" OnClick="@(() => AddAction(roll))" Disabled="Disabled">
                @(roll)+
            </MudButton>
		}
	</MudPaper>
</MudItem>

@code
{
	[Parameter]
	public EventCallback<Action> OnAddAction { get; set; }
	    
    [Parameter]
    public bool Disabled { get; set; }

	private void AddAction(int roll)
	{
		OnAddAction.InvokeAsync(new Models.Actions.ArgueTheCall(roll));
	}
}