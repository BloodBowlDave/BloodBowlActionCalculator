<MudItem>
    <MudPaper>
        <h5><u>F</u>oul</h5>
        
        <MudNumericField T="int" Min="2" Max="11" @bind-Value="_roll" Disabled="Disabled"/>
        <MudButton Variant="Variant.Outlined" OnClick="AddAction" Disabled="Disabled">Add</MudButton>
    </MudPaper>
</MudItem>

@code {
    private int _roll = 9;

    [Parameter]
    public EventCallback<Action> OnAddAction { get; set; }
        
    [Parameter]
    public bool Disabled { get; set; }

    private void AddAction()
    {
        OnAddAction.InvokeAsync(new Models.Actions.Foul(_roll));
    }
}