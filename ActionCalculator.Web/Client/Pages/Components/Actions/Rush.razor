<MudItem>
    <MudPaper>
        <h5><u>R</u>ush</h5>
        
        @for (var i = 2; i <= 4; i++)
        {
            var roll = i;
            <MudButton Variant="Variant.Outlined" OnClick="@(() => AddAction(roll))" Disabled="Disabled">@(roll)+</MudButton>
        }
    </MudPaper>
</MudItem>

@code {

    [Parameter]
    public EventCallback<Action> OnAddAction { get; set; }
        
    [Parameter]
    public bool Disabled { get; set; }

    private void AddAction(int roll)
    {
        OnAddAction.InvokeAsync(new Models.Actions.Rush(roll, false));
    }

}
