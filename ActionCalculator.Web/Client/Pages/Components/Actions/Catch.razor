<MudItem>
    <MudPaper>
        <h5><u>C</u>atch</h5>
        
        <MudNumericField T="int" Min="1" Max="8" @bind-Value="_roll"/>
        <MudButton Variant="Variant.Outlined" OnClick="AddAction">Add</MudButton>
    </MudPaper>
</MudItem>

@code {
    private int _roll = 3;

    [Parameter]
    public EventCallback<Action> OnAddAction { get; set; }

    private void AddAction()
    {
        OnAddAction.InvokeAsync(new Models.Actions.Catch(_roll, false));
    }
}